{
    "$schema": "https://json.schemastore.org/prettierrc",
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": false,
    "overrides": [
        {
            "files": "*.semi.*",
            "options": {
                "semi": true
            }
        },
        {
            "files": ["*.html", "legacy/**/*.js"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ".prettierrc",
            "options": {"parser": "yaml"}
        }
    ]
}
